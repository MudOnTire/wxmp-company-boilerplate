/**app.wxss**/
.container {
  justify-content: flex-start;
  padding: 0;
  display: block;
} 

.banner {
  width: 750rpx;
  height: 417rpx;
}

.banner image {
  width: 100%;
  height: 417rpx;
}

.title{
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-size: 48rpx;
  padding: 8rpx 0;
  color: white;
  background-color: #20BDBF;
  width: 100%;
  text-align: center;
  display: block;
}

.section-title{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 14rpx;
  height: 100rpx;
  color:#008A94;
}

.left-bar,.right-bar{
  height: 4rpx;
  background-color: #008A94;
  width: 100rpx;
  margin: 0 20rpx;
}

.section-title>.main{
  font-size: 40rpx;
  line-height: 20rpx;
}

.section-title>.tip{
  font-size: 20rpx;
  padding-left: 18rpx;
}

.categories{
  display: flex;
  width: 100%;
}

.cate-column{
  flex: 1;
  margin: 10rpx;
}

.category{
  display: flex;
  height: 60rpx;
  align-items: center;
  justify-content: space-between;
  color: #333;
}

.category.odd{
  background: rgba(210, 214, 234, 0.2);
}

.category.even{
  background: rgba(178, 210, 221, 0.5);
}

.cate-icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.cate-name{
  font-size: 28rpx;
  flex: 3;
}

.cate-price{
  font-size: 24rpx;
  flex: 2;
}

.hint{
  display: block;
  font-size: 26rpx;
  text-align: center;
}

.about-title{
  margin-top: 40rpx;
}

.about{
  font-size: 26rpx;
  padding: 0rpx 20rpx;
  display: block;
}

.about .sub-title{
  font-size: 30rpx;
  display: block;
  width: 100%;
  text-align: center;
  background-color: #20BDBF;
  padding: 6rpx 0;
  color: white;
}

.about-img{
  width: 94%;
  display: block;
  margin: 0 auto;
  margin-top: 40rpx;
}

.contact-item{
  font-size: 28rpx;
  color: #555;
  padding: 6rpx 0;
}

.contact-icon{
  width: 36rpx;
  height: 36rpx;
  position: relative;
  top:8rpx;
}

.contact-content{
  flex: 1;
}

.location-title .main{
  font-size: 30rpx;
}

.map-container {
  padding: 2rpx;
  width: 100%;
}

.map {
  width: 100%;
  height: 600rpx;
}